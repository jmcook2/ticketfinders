<div class="row">
  <div class="small-12 columns">&nbsp;</div>
</div>

<% if @competition %>

  <div class="row">
    <ul class="breadcrumbs">
      <li><%= link_to 'Home', root_url %></li>
      <li><%= link_to 'Categories', categories_path %></li>
      <li><%= link_to @category.description, category_path(@category) %></li>
      <li><%= link_to @competition.name, competition_path(@competition) %></li>
      <li class="current"><%= @player.name %></li>
    </ul>
  </div>

  <div class="row">
    <h3 class="gotham-regular"><%= @player.name %> | <%= @competition.name %></h3>
  </div>

  <section class="grey-bg">
    <% @events.each do |event| %>
      <div class="row">
        <%= link_to event.name, event_path(event, :comp => @competition, :player => @player) %>
      </div>
    <% end %>
  </section>

<% else %>

  <div class="row">
    <ul class="breadcrumbs">
      <li><%= link_to 'Home', root_url %></li>
      <li><%= link_to 'Categories', categories_path %></li>
      <li><%= link_to @category.description, category_path(@category) %></li>
      <li class="current"><%= @player.name %></li>
    </ul>
  </div>

  <div class="row">
    <h3 class="gotham-regular"><%= @player.name %></h3>
  </div>

  <section class="grey-bg">
    <% @events.each do |event| %>
      <div class="row event-tile">
        <div class="small-12 medium-2 columns">
          <%= image_tag(event.avatar.tiny.url) %>
        </div>
        <div class="small-12 medium-4 columns text-left">
          <%= event.name %><br />
          <%= nice_time(event.start_time) %><br />
          <%= event.venue.name %>
        </div>
        <div class="small-12 medium-6 columns text-left">
          <%= Ticket.where(event_id: event.id).sum(:quantity) %> Tickets available
        </div>
      </div>
    <% end %>
  </section>

<% end %>
