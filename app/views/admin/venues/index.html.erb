<h1>Listing Venues</h1>

<%= link_to 'New venue', new_admin_venue_path, class: "pure-button" %>

<br />
<br />

<table class="pure-table pure-table-striped pure-table-horizontal">
  <tr>
    <th>Name</th>
    <th>Capacity</th>
    <th>City</th>
    <th>Country</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @venues.each do |venue| %>
    <tr>
      <td><%= venue.name %></td>
      <td><%= venue.capacity %></td>
      <td><%= venue.city %></td>
      <td><%= venue.country %></td>
      <td><%= link_to 'Show', admin_venue_path(venue) %></td>
      <td><%= link_to 'Edit', edit_admin_venue_path(venue) %></td>
      <td><%= link_to 'Destroy', admin_venue_path(venue),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
