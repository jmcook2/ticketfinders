<%= form_for [:admin, @ticket] do |f| %>

  <% if @ticket.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@ticket.errors.count, "error") %> prohibited
        this ticket from being saved:
      </h2>
      <ul>
        <% @ticket.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </p>

  <p>
    <%= f.label :category %><br>
    <%= f.text_area :category %>
  </p>

  <p>
    <%= f.label :quantity %><br>
    <%= f.text_area :quantity %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.label :currency %><br>
    <%= f.select :currency, ["Dollars", "Euros", "Pounds"], :prompt => "Choose Currency" %>
  </p>

  <p>
    <%= f.label :event_id %><br>
    <%= f.collection_select(:event_id, Event.order('id ASC'), :id, :id, prompt: true) %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
