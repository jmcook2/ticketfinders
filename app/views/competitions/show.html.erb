<div class="row">
  <div class="small-12 columns">&nbsp;</div>
</div>

<div class="row">
  <ul class="breadcrumbs">
    <li><%= link_to 'Home', root_url %></li>
    <li><%= link_to 'Categories', categories_path %></li>
    <li><%= link_to @category.description, category_path(@category) %></li>
    <li class="current"><%= @competition.name %></li>
  </ul>
</div>

<div class="row">
  <h3 class="gotham-regular"><%= @competition.name %></h3>
</div>

<% if @players.count > 0 %>

  <section class="grey-bg">
    <% @players.each do |player| %>
      <div class="row">
        <%= link_to player.name, player_path(player, :comp => @competition) %>
      </div>
    <% end %>
  </section>

<% else %>

  <section class="grey-bg">
    <div class="row">
      <h5>We don't currently have any events for this competition</h5>
    </div>
  </section>

<% end %>
