<h2>Listing Competitions</h2>

<%= link_to 'New competition', new_competition_path %> | <%= link_to 'Admin Home', controller: 'welcome' %>

<table>
  <tr>
    <th>Name</th>
    <th>Category</th>
  </tr>

  <% @competitions.each do |competition| %>
    <tr>
      <td><%= competition.name %></td>
      <td><%= competition.category_id %></td>
      <td><%= link_to 'Show', competition_path(competition) %></td>
      <td><%= link_to 'Edit', edit_competition_path(competition) %></td>
      <td><%= link_to 'Destroy', competition_path(competition),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
