<div class="row">
  <ul class="breadcrumbs">
    <li><%= link_to 'Home', root_url %></li>
    <li><%= link_to 'Categories', categories_path %></li>
    <li class="current"><%= @category.description %></li>
  </ul>
</div>

<div class="row">
  <h3 class="gotham-regular"><%= @category.description %></h3>
</div>

<% if @competitions.count > 0 %>

  <section class="grey-bg">
    <% @competitions.each do |competition| %>
      <div class="row">
        <%= link_to competition.name, competition_path(competition) %><br />
      </div>
    <% end %>
  </section>

<% elsif @players.count > 0 %>

  <section class="grey-bg">
    <% @players.each do |player| %>
      <div class="row">
        <%= link_to player.name, player_path(player) %>
      </div>
    <% end %>
  </section>

<% else %>

  <div class="row">
    There are no events in this category.
  </div>

<% end %>
